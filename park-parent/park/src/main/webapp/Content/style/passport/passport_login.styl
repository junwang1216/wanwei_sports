@charset "utf-8"
@import "../base"

html
body
    height 100%

.login
    height auto
    background url("/Content/images/log_bg.jpg") no-repeat center fixed
    background-size cover
    color rgba(255, 255, 255, .95)
    .login-panel
        width 750px
        margin 10% auto 0
        .logo
            float none
            width auto
            padding 0
            background 0 0
            h1
                img
                    height 30px
                    margin -5px 2px 0
        .login-info
            ul
                list-style none
                padding 0
                margin 20px 0
        .form-control
            display block
            margin-top 15px
            &.text-name
                background #fff url("/Content/images/user.png") no-repeat 95% center
                color #333
            &.text-password
                background #fff url("/Content/images/locked.png") no-repeat 95% center
                color #333
        .btn-login
            margin-top 15px
        form
            background rgba(255, 255, 255, .4)
            border 1px solid rgba(255, 255, 255, .4)
            box-shadow 0 3px 0 rgba(12, 12, 12, .4)
            border-radius 3px
            padding 30px
    .login-footer
        border-top solid 1px rgba(255, 255, 255, .4)
        margin 20px 0
        padding-top 15px
