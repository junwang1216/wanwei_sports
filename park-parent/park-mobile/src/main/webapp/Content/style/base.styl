@charset "utf-8"

*
    margin 0 auto
    padding 0
    border 0

body
    font-family "微软雅黑", Arial, Helvetica, sans-serif
    color #333
    line-height 25px
    font-size 14px
    margin 0
    padding 0
header, footer, nav
    display block
ul
    list-style-type none
    margin 0
    padding 0
    li
        list-style-type none
        margin 0
        padding 0
.table
    margin-bottom 0
    tbody
    thead
        tr
            td
            th
                vertical-align middle

.input-validation-error
    border 1px solid #F2595C !important
    border-bottom-left-radius 0
    border-bottom-right-radius 0
    &:focus
        box-shadow(0 0 8px rgba(242,89,92,.6))

.field-validation-error
    color #F2595C
    border 1px solid #F2595C
    border-top none
    background-color #FFDEDE
    padding-left 8px

/** bootstrap **/
.container-fluid
    margin 0
    padding 0

/** header **/
.ww-header
    width 100%
    height 60px
    background-color #08A5E0
    box-shadow 1px 1px 7px #999
    .header
        width 960px
        margin 0 auto
        .ww-logo
            float left
            height 60px
            padding-top 6px
            margin-right 20px
            img
                height 48px
        .ww-nav
            float right
            li
                float left
                margin-right 1px
                width 100px
                height 60px
                position relative
                text-align center
                padding 4px 0
                &.nav-home
                    &:hover
                        background-color #006D96
                        border 1px solid #004E6C
                &.nav-active
                    background-color #006D96
                    border 1px solid #004E6C
                a
                    &:visited
                    &:link
                        color #fff
                    img
                        width 30px
                        height 30px
                    span
                        display block
                ul
                    display none
                    position absolute
                    z-index 1000
                    top 59px
                    left -1px
                    background-color #006D96
                    li
                        display block
                        width 100px
                        float none
                        margin-right 0
                        height 30px
                        position relative
                        line-height 30px
                        border-bottom 1px inset #004E6C
                        font-size 12px
                        padding 0
            .nav-moon
                background-color #006D96
                border 1px solid #004E6C
                a
                    color #FFF
                ul
                    display block
                    a
                        display block
                        width 100px
                        height 30px
                        line-height 30px
                        &:hover
                        &.active
                            background #333
/** wrapper **/
.ww-wrapper
    width 100%
    margin-top 6px
    .wrapper
        width 960px
        margin 0 auto
        background #fff
        clear both

